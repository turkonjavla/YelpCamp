<% include partials/header %>

    <div class="container marginTop">
        <div class="row">
            <div class="col-md-3 mt-4">
                <div class="list-group">
                    <a href="#" class="list-group-item waves-effect">Info</a>
                    <a href="#" class="list-group-item waves-effect">Info 2</a>
                    <a href="#" class="list-group-item waves-effect">Info 3</a>
                </div>            
            </div>

            <div class="col-md-9">    
                <div class="card card-cascade wider reverse my-4">
                    <div class="view overlay">
                        <img src="<%= campground.image %>" class="show-page-image">
                        <a href="#!">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center py-2">
                            <strong><%= campground.name %></strong>
                        </h4>
                        <p class="text-center">
                            <a class="amber-text mr-3 waves-effect" href=""><i class="fas fa-edit"></i> Edit</a>
                            <a class="red-text waves-effect" href=""><i class="fas fa-times"></i> Remove</a>
                        </p>
                        <p class="lead"><%= campground.description %></p>
                        <p><a class="indigo-text waves-effect" href="/campgrounds"><i class="fa fa-chevron-left"></i> Campgrounds</a></p>
                    </div>
                    <div class="card-footer p-3 text-center">
                        <span class="float-left font-weight-bold">
                            <strong>$2160</strong>
                        </span>
                        <span class="float-right">
                            <a href="#" class="deep-purple-text waves-effect">Make reservation <i class="fa fa-chevron-right"></i></a>
                        </span>
                    </div>
                </div>

            <h3 class="mt-5 mb-4 text-center"><strong>Comments</strong></h3>       
                <div class="mdb-feed z-depth-1-half p-3 mb-5">
                    <div class="news mb-3">
                    <% campground.comments.forEach((comment) => { %>
                        <div class="label mt-4">
                            <img src="https://mdbootstrap.com/img/Photos/Avatars/avatar-1-mini.jpg" class="rounded-circle z-depth-1-half mb-3">
                        </div>
                        <!--Excert-->
                        <div class="excerpt">
                            <!--Brief-->
                            <div class="brief">
                                <a class="name"><strong><%= comment.author %></strong></a>
                                <div class="date"><strong>1 hour ago</strong></div>
                            </div>
                            <div class="added-text "><%= comment.text %></div>
                    <% }); %>
                            <!--Feed footer-->
                            <div class="feed-footer mt-3">
                                <a class="comment" data-toggle="collapse" href="#collapseExample-1" aria-expanded="false" aria-controls="collapseExample-1"><i class="fa fa-share"></i> Leave a comment</a> 
                                <div class="collapse" id="collapseExample-1">
                                    <div class="card card-body mt-1">
                                        <!--Add comment-->
                                        <div class="md-form mt-1 mb-1">
                                            <textarea type="text" rows="5" cols="60" id="form7" class="md-textarea"></textarea>
                                            <label for="form7">Add comment</label>
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <button type="button" class="btn btn-sm btn-warning waves-effect" data-toggle="collapse" data-target="#collapseExample-1" aria-expanded="false" aria-controls="collapseExample-1">Cancel</button>
                                            <button type="button" class="btn btn-sm btn-primary" data-toggle="collapse" data-target="#collapseExample-1" aria-expanded="false" aria-controls="collapseExample-1">Reply</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include partials/footer %>