<% include partials/header %>

    <div class="container marginTop">
        <div class="row">
            <div class="col-md-3 mt-4">
                <div class="list-group">
                    <a href="#" class="list-group-item waves-effect">Info</a>
                    <a href="#" class="list-group-item waves-effect">Info 2</a>
                    <a href="#" class="list-group-item waves-effect">Info 3</a>
                </div>            
            </div>

            <div class="col-md-9">    
                <div class="card card-cascade wider reverse my-4">
                    <div class="view overlay">
                        <img src="<%= campground.image %>" class="show-page-image">
                        <a href="#!">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center py-2">
                            <strong><%= campground.name %></strong>
                        </h4>
                        <p class="text-center">
                            <a class="amber-text mr-3 waves-effect" href=""><i class="fas fa-edit"></i> Edit</a>
                            <a class="red-text waves-effect" href=""><i class="fas fa-times"></i> Remove</a>
                        </p>
                        <p class="lead"><%= campground.description %></p>
                        <p><a class="indigo-text waves-effect" href="/campgrounds"><i class="fa fa-chevron-left"></i> Campgrounds</a></p>
                    </div>
                    <div class="card-footer p-3 text-center">
                        <span class="float-left font-weight-bold">
                            <strong>$2160</strong>
                        </span>
                        <span class="float-right">
                            <a href="#" class="deep-purple-text waves-effect">Make reservation <i class="fa fa-chevron-right"></i></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include partials/footer %>