<% include partials/header %>

<div class="container" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h3 class="card-header">Create campground</h3>
                <div class="card-body">
                    <form action="/campgrounds" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="name" id="name">
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input type="text" class="form-control" name="image" placeholder="image" id="image">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="description" cols="30" rows="10" placeholder="Write a descrption"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success">Create</button>
                            <a class="btn btn-outline-secondary" href="/campgrounds">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>