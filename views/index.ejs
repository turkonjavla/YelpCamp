<% include partials/header %>

    <div class="container" style="margin-top: 80px;">
            <div class="jumbotron text-center">
                <h3 class="display-4">Welcome to YelpCamp!</h3>
                <p class="lead">The number one place for campgrounds.</p>
                <hr class="my-4">
                <p>Signup and start camping!</p>  <!-- TODO add signup button -->
                <a href="/campgrounds/new" class="btn btn-lg btn-outline-dark">Create campground</a>
            </div>
    </div>

    <div class="container">
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="<%= campground.image %>" alt="<%= campground.name %>" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= campground.name %></h5>
                        <hr class="my-3">
                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing
                        elit. Voluptatem, maxime, dolorem veritatis labore
                        asperiores soluta tempora assumenda esse saepe
                        accusantium corrupti, nobis ad sequi doloremque fugiat
                        eveniet laboriosam impedit fugit?</p> 
                    </div>
                    <a href="#" class="btn btn-light">More info <i class="fas fa-chevron-right"></i></a>
                </div>
             </div>
         <% }); %>
        </div>
    </div>

<% include partials/footer %>