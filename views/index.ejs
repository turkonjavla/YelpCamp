<% include partials/header %>

    <div class="container" style="margin-top: 80px;">
    <!--Jumbotron-->
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="text-white text-center d-flex align-items-center rgba-blue-grey-strong py-5 px-4 rounded jumbotron" style="">
                    <div class="py-5">
                            <h6 class="white-text font-bold"><i class="fa fa-plane"></i> Travel</h6>
                            <h2 class="card-title pt-3 mb-5 font-bold">Welcome to YelpCamp!</h2>
                            <p class="px-5 pb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellat
                                fugiat, laboriosam, voluptatem, optio vero odio nam sit officia
                                accusamus minus error nisi architecto nulla ipsum dignissimos.
                                Odit sed qui, dolorum!</p>
                            <a class="btn btn-indigo"><i class="fa fa-clone left"></i> Create campground</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!--Jumbotron-->
    </div>

    <!-- Campgrounds -->
    <div class="container">
        <h2 class="h1 text-center my-3 font-weight-bold">Campgrounds</h2>
        <p class="grey-text pb-5 text-center">Check our most recent campgrounds</p>    
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="view overlay">
                            <img style="height: 200px; width: 350px" src="<%= campground.image %>" alt="Card image cap">
                            <a href="#!">
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="text-center h4">
                                <strong><%= campground.name %></strong>
                            </h4>
                            <hr>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-mdb-color btn-md">Read more <i class="fa fa-chevron-right"></i></a>
                        </div>
                    </div>
                </div>    
            <% }); %>          
        </div>
    </div>

<% include partials/footer %>